<Window x:Class="_301289600Nguyen_Lab2.BookReadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
        xmlns:local="clr-namespace:_301289600Nguyen_Lab2"
        mc:Ignorable="d"
        Title="Book Reader" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <syncfusion:PdfViewerControl x:Name="pdfViewerControl" Grid.Row="0"/>
        <TextBlock x:Name="DebugInfoText"
               Grid.Row="1"
               Text="Loading..."
               Margin="10,5"
               FontSize="12"
               Foreground="Gray"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>
        <Button x:Name="BookmarkButton" Content="Bookmark Current Page" Grid.Row="1" Margin="762,10,0,10" Padding="10" HorizontalAlignment="Left" Click="BookmarkButton_Click" Background="#FF2C92A0" Width="308"/>
    </Grid>
</Window>
